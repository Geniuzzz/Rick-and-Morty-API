<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="List of Episodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimaryDark"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_episodes"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"

            tools:listitem="@layout/episodes_list" android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/ListCharacters"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of Characters"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/ListCharacters"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textColor="@color/colorAccent"/>


</android.support.constraint.ConstraintLayout>